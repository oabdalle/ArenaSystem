<!doctype html>
<html lang="en">
<head>
        <link rel="stylesheet" href="/styles/receiptStyle.css">
</head>
<body>
<div id="invoice-POS">
    
        <center id="top">
        
          <div class="info"> 
            <h2>Champions Take Chances Inc.</h2>  
            <div id="logo"></div>
          </div><!--End Info-->
        </center><!--End InvoiceTop-->
        
        <div id="mid">
          <div class="info">
            <h2>Contact Info</h2>  
             <% if (customer.length > 0) {%>
            <p> 

                <!-- customer address, email -->
                Address : <%= customer[0].street%></br>
                City    : <%= customer[0].city%></br>
                Email   : <%= customer[0].username%></br>
            </p>

            <% } %>
          </div>
        </div><!--End Invoice Mid-->
        
        <div id="bot">
    
                        <div id="table">
                            <table>
                                <tr class="tabletitle">
                                    <td class="item"><h2>Item</h2></td>
                                    <td class="Hours"><h2>Qty</h2></td>
                                    <td class="Rate"><h2>Sub Total</h2></td>
                                </tr>
                           
                                <tr class="service">
                                    <td class="tableitem"><p class="itemtext">Free Admission</p></td>
                                    <td class="tableitem"><p class="itemtext">1</p></td>
                                    <td class="tableitem"><p class="itemtext">$0.00</p></td>
                                </tr>
    
    
                            </table>
                        </div><!--End Table-->
    
                        <div id="legalcopy">
                            <p class="legal"><strong>Thank you for your business!</strong>Â  Please provide this receipt before admission to event
                            </p>
                        </div>
    
                    </div><!--End InvoiceBot-->
      </div><!--End Invoice-->

</body>

</html>